#macros:
#S: system
#SS: subsystem
#D:  device
#ADDR: Board Address
#CH: channel number 0-3
#PORT: asyn port for the crate

record(seq, "$(S):$(SS):$(D):BD$(ADDR):Update") {
  field(DESC, "Update Board Params")
  field(DOL1, "1")
  field(LNK1, "$(S):$(SS):$(D):BD$(ADDR):BDName.PROC")
  field(DOL2, "1")
  field(LNK2, "$(S):$(SS):$(D):BD$(ADDR):ChNum.PROC")
  field(DOL3, "1")
  field(LNK3, "$(S):$(SS):$(D):BD$(ADDR):FWRelease.PROC")
  field(DOL4, "1")
  field(LNK4, "$(S):$(SS):$(D):BD$(ADDR):SerialNum.PROC")
  field(DOL5, "1")
  field(LNK5, "$(S):$(SS):$(D):BD$(ADDR):Intlock.PROC")
  field(DOL6, "1")
  field(LNK6, "$(S):$(SS):$(D):BD$(ADDR):BDAlarm.PROC")
  field(SCAN, "10 second")
  field(PINI, "YES")
}

record(seq, "$(S):$(SS):$(D):BD$(ADDR):UpdateChannel") {
  field(DESC, "Update Channel Params")
  field(DOL1, "1")
  field(LNK1, "$(S):$(SS):$(D):BD$(ADDR):Ch0Trigger.PROC")
  field(DOL2, "1")
  field(LNK2, "$(S):$(SS):$(D):BD$(ADDR):Ch1Trigger.PROC")
  field(DOL3, "1")
  field(LNK3, "$(S):$(SS):$(D):BD$(ADDR):Ch2Trigger.PROC")
  field(DOL4, "1")
  field(LNK4, "$(S):$(SS):$(D):BD$(ADDR):Ch3Trigger.PROC")
  field(SCAN, "1 second")
  field(PINI, "YES")
}

